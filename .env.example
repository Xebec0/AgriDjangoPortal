# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True  # Set to False in production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# For SQLite (local development)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Superuser Configuration (for automatic creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For development
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Admin Registration Code
ADMIN_REGISTRATION_CODE=ADMIN123  # Change this to a secure code

# Security Settings (production only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True

# Static Files
STATIC_ROOT=staticfiles

# Media Files
MEDIA_ROOT=media

# Logging Level
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Time Zone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

# Render Specific (if deploying to Render)
# RENDER=True
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Development Tools
# DJANGO_DEBUG_TOOLBAR=True  # Enable debug toolbar in development

# Backup Settings
BACKUP_RETENTION_DAYS=30  # Number of days to keep backups
MAX_BACKUP_COUNT=30  # Maximum number of backups to keep

# Application Specific
SITE_NAME=Agrostudies Registration System for Farm Selection
SUPPORT_EMAIL=support@agrostudies.com
DEFAULT_FROM_EMAIL=noreply@agrostudies.com

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False  # Currently disabled
ENABLE_SOCIAL_AUTH=False
ENABLE_API=False

# Rate Limiting (if implemented)
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_COOLOFF_TIME=300  # seconds

# Cache Configuration (optional)
# CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
# CACHE_TIMEOUT=300  # seconds

# Sentry Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# AWS S3 Settings (if using S3 for media storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Celery Configuration (if using Celery for async tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Keys (if integrating with external services)
# GOOGLE_MAPS_API_KEY=your-api-key
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token

# Pagination
DEFAULT_PAGE_SIZE=20

# File Upload Limits
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Session Configuration
SESSION_COOKIE_AGE=1209600  # 2 weeks in seconds
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# Password Validation
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=True
REQUIRE_LOWERCASE=True
REQUIRE_NUMBERS=True
REQUIRE_SPECIAL_CHARS=False
